{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "preserve",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "outDir": "dist",
    "strict": false,
    "composite": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
      "vite/client",
      "./src/shims-vue.d.ts"
    ],
  },
  "include": [
    "./src/modules/*.ts",
    "./src/modules/**/*.ts",
    "./src/modules/**/*.vue",
    "./src/modules/**/*.json",
    "./src/types",
    "./src/api_client/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
