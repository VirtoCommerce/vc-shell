{
  "name": "@vc-shell/root",
  "version": "1.0.60",
  "private": true,
  "scripts": {
    "vendor-portal-app-init": "mkdir apps && cd apps && git clone https://github.com/VirtoCommerce/vendor-portal.git && cd ../ && yarn && yarn bootstrap && yarn run build",
    "bootstrap": "lerna bootstrap -- --frozen-lockfile",
    "bootstrap-link": "lerna bootstrap --force-local -- --frozen-lockfile && lerna link --force-local",
    "prepare": "yarn run bootstrap",
    "postinstall": "husky install",
    "publish": "lerna publish",
    "lint": "eslint --fix 'framework/**/*.{ts,vue}' 'apps/**/*.{ts,vue}'",
    "lint-staged": "lint-staged",
    "init-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version": "cross-env-shell \"lerna version $npm_package_version --conventional-commits --no-commit-hooks --no-push --ignore-scripts --force-publish --no-git-tag-version --yes && git add .\"",
    "postversion": "git push origin --tags",
    "build": "lerna run build",
    "build-framework": "lerna run build --scope @vc-shell/framework",
    "build-cli:config": "lerna run build --scope @vc-shell/config-generator",
    "build-cli:api-client": "lerna run build --scope @vc-shell/api-client-generator",
    "generate-api-client:api-client": "lerna run generate-api-client --scope=@vc-shell/framework --stream --no-prefix",
    "generate-api-client": "lerna run generate-api-client --stream --no-prefix",
    "storybook-build": "cross-env APP_ENV=production build-storybook -s .storybook/assets",
    "storybook-serve": "start-storybook -s .storybook/assets -p 6006"
  },
  "workspaces": [
    "apps/*",
    "framework",
    "cli/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/config-lerna-scopes": "^17.4.2",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-backgrounds": "^6.4.18",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/builder-vite": "^0.1.28",
    "@storybook/components": "^6.3.8",
    "@storybook/core-client": "^6.3.8",
    "@storybook/core-events": "^6.3.8",
    "@storybook/theming": "^6.3.8",
    "@storybook/vue3": "^6.3.8",
    "@types/lodash-es": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "autoprefixer": "^10.4.4",
    "chalk": "^2.4.2",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "eslint": "~8.22.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.10.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.1",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^13.2.0",
    "lodash-es": "^4.17.21",
    "path": "^0.12.7",
    "postcss": "^8.4.12",
    "prettier": "^2.5.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "sass": "^1.49.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.2",
    "vite": "^4.1.4",
    "vite-plugin-checker": "^0.5.6",
    "vite-plugin-pwa": "^0.14.7",
    "vue": "^3.0.0",
    "vue-eslint-parser": "^9.1.1",
    "vue-tsc": "~1.0.24",
    "yarn": "^1.22.11"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  },
  "resolutions": {
    "@types/react": "file:stub/@types/react"
  }
}
