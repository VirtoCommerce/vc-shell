{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "resolveJsonModule": true,
    "paths": {
      "@virtoshell/api-client": [
        "framework/api-client/src"
      ],
      "@virtoshell/core": [
        "framework/core/src"
      ],
      "@virtoshell/ui": [
        "framework/ui/src"
      ],
      "@virtoshell/mod-assets": [
        "modules/assets/src"
      ],
      "@virtoshell/config-generator": [
        "cli/config/src"
      ],
      "@virtoshell/api-client-generator": [
        "cli/api-client/src"
      ]
    }
  },
  "references": [
    {
      "path": "framework/api-client/"
    },
    {
      "path": "framework/core/"
    },
    {
      "path": "framework/ui/"
    },
    {
      "path": "modules/assets/"
    },
    {
      "path": "cli/config/"
    },
    {
      "path": "cli/api-client/"
    }
  ]
}
