{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "preserve",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "paths": {
      "@vc-shell/framework": [
        "framework"
      ],
      "@vc-shell/config-generator": [
        "cli/config"
      ],
      "@vc-shell/release-config": [
        "cli/release-config"
      ],
      "@vc-shell/api-client-generator": [
        "cli/api-client"
      ],
      "@vc-shell/create-app": [
        "cli/create-vc-app"
      ],
      "@vc-shell/import-module": [
        "import-module"
      ]
    }
  },
  "references": [
    {
      "path": "framework/"
    },
    {
      "path": "cli/config/"
    },
    {
      "path": "cli/api-client/"
    },
    {
      "path": "cli/create-vc-app/"
    },
    {
      "path": "cli/release-config/"
    },
    {
      "path": "import-module/"
    }
  ]
}
