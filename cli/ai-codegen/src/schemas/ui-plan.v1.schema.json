{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vc-shell.dev/schemas/ui-plan.v1.json",
  "title": "VC Shell UI Plan",
  "description": "Schema for declarative UI generation in VC Shell framework",
  "type": "object",
  "required": ["$schema", "module", "blades"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://vc-shell.dev/schemas/ui-plan.v1.json"
    },
    "module": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "description": "Module name in kebab-case"
    },
    "blades": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/blade"
      }
    },
    "data": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/dataSource"
          }
        }
      }
    }
  },
  "definitions": {
    "blade": {
      "type": "object",
      "required": ["id", "route", "layout", "title"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
        },
        "route": {
          "type": "string",
          "pattern": "^/[a-z0-9-]+$",
          "description": "Single-level blade route in format /name (e.g., /offers, /products). Multi-level routes and parameters are not supported."
        },
        "layout": {
          "type": "string",
          "enum": ["page", "grid", "details"]
        },
        "title": {
          "type": "string"
        },
        "isWorkspace": {
          "type": "boolean",
          "default": false
        },
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/component"
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["save", "delete", "refresh", "add", "edit", "remove", "next", "back", "submit"]
          }
        },
        "features": {
          "type": "array",
          "description": "Additional features for the blade",
          "items": {
            "type": "string",
            "enum": ["filters", "multiselect", "validation", "gallery", "widgets"]
          }
        },
        "customSlots": {
          "type": "array",
          "description": "Custom slot components for table columns",
          "items": {
            "$ref": "#/definitions/customSlot"
          }
        },
        "widgets": {
          "type": "array",
          "description": "Custom widgets to integrate in the blade",
          "items": {
            "$ref": "#/definitions/widget"
          }
        },
        "width": {
          "type": "string",
          "description": "Blade width (e.g., '50%', '100%', '600px')",
          "default": "50%"
        },
        "theme": {
          "type": "object",
          "properties": {
            "variant": {
              "type": "string",
              "enum": ["light", "dark", "system"],
              "default": "system"
            }
          }
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "logic": {
          "type": "object",
          "description": "Blade logic definition for AI generation",
          "properties": {
            "handlers": {
              "type": "object",
              "description": "Event handler descriptions",
              "additionalProperties": {
                "type": "string"
              }
            },
            "toolbar": {
              "type": "array",
              "description": "Toolbar action definitions",
              "items": {
                "type": "object",
                "required": ["id", "action"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "icon": {
                    "type": "string"
                  },
                  "action": {
                    "type": "string",
                    "description": "Action description (e.g., 'reload()', 'openBlade({blade: markRaw(EntityDetails)})')"
                  }
                }
              }
            },
            "state": {
              "type": "object",
              "description": "State management definitions",
              "additionalProperties": {
                "type": "object",
                "required": ["source", "reactive"],
                "properties": {
                  "source": {
                    "type": "string",
                    "enum": ["composable", "local", "prop"]
                  },
                  "reactive": {
                    "type": "boolean"
                  },
                  "default": {
                    "description": "Default value for the state"
                  }
                }
              }
            }
          }
        },
        "composable": {
          "type": "object",
          "description": "Composable definition for AI generation",
          "properties": {
            "name": {
              "type": "string",
              "description": "Composable name (e.g., 'useEntityList')"
            },
            "methods": {
              "type": "array",
              "description": "Methods provided by composable",
              "items": {
                "type": "string"
              }
            },
            "mockData": {
              "type": "boolean",
              "description": "Whether to include mock data",
              "default": true
            }
          }
        }
      }
    },
    "step": {
      "type": "object",
      "required": ["id", "title", "components"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/component"
          }
        }
      }
    },
    "component": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "VcTable",
            "VcForm",
            "VcInput",
            "VcTextarea",
            "VcSelect",
            "VcCheckbox",
            "VcSwitch",
            "VcButton",
            "VcCard",
            "VcCollapsibleCard",
            "VcGallery",
            "VcFileUpload",
            "VcDatepicker",
            "VcImage",
            "VcBadge",
            "VcStatus"
          ]
        },
        "dataSource": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "title": {
          "type": "string",
          "description": "Component title (e.g., for VcCard)"
        },
        "collapsible": {
          "type": "boolean",
          "description": "Is component collapsible (for VcCard)",
          "default": false
        },
        "multiselect": {
          "type": "boolean",
          "description": "Enable multiselect (for VcTable)",
          "default": false
        },
        "enableSelectAll": {
          "type": "boolean",
          "description": "Enable select all (for VcTable with multiselect)",
          "default": false
        },
        "fields": {
          "type": "array",
          "maxItems": 50,
          "items": {
            "$ref": "#/definitions/field"
          }
        },
        "columns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/column"
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "filters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/filter"
          }
        },
        "props": {
          "type": "object"
        }
      }
    },
    "field": {
      "type": "object",
      "required": ["as", "label"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Field identifier (can use 'id' or 'key', will be normalized to 'key')"
        },
        "key": {
          "type": "string",
          "description": "Field identifier (can use 'id' or 'key')"
        },
        "as": {
          "type": "string",
          "enum": ["VcInput", "VcTextarea", "VcSelect", "VcCheckbox", "VcSwitch", "VcGallery", "VcFileUpload"]
        },
        "label": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "description": "Field data type",
          "enum": ["text", "email", "number", "date", "boolean", "url", "tel"]
        },
        "placeholder": {
          "type": "string"
        },
        "required": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "string",
              "description": "Expression for conditional required state (e.g., 'status === \"active\"')"
            }
          ],
          "description": "Is field required (boolean) or expression for dynamic required state (string)",
          "default": false
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "validation": {
          "type": "string",
          "description": "Validation rules (e.g., 'min:3|max:61|unique:sku')"
        },
        "async": {
          "type": "boolean",
          "description": "Is this an async field (e.g., async select)",
          "default": false
        },
        "searchable": {
          "type": "boolean",
          "description": "Is this field searchable (for selects)",
          "default": false
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        },
        "uploadPath": {
          "type": "string",
          "description": "Upload path for file/gallery fields"
        },
        "multiple": {
          "type": "boolean",
          "description": "Allow multiple values/files",
          "default": false
        },
        "sortable": {
          "type": "boolean",
          "description": "Allow sorting (for galleries)",
          "default": false
        },
        "disabled": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "string",
              "description": "Expression for conditional disabled state (e.g., '!!item.id', '!canEdit')"
            }
          ],
          "description": "Is field disabled (boolean) or expression for dynamic disabled state (string)",
          "default": false
        },
        "readonly": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "string",
              "description": "Expression for conditional readonly state (e.g., 'status === \"published\"')"
            }
          ],
          "description": "Is field readonly (boolean) or expression for dynamic readonly state (string)",
          "default": false
        },
        "visible": {
          "oneOf": [
            { "type": "boolean" },
            { "type": "string", "description": "Expression for conditional visibility (e.g., 'type === \"custom\"')" }
          ],
          "description": "Is field visible (boolean) or expression for dynamic visibility (string)",
          "default": true
        },
        "tooltip": {
          "type": "string",
          "description": "Tooltip text for the field"
        }
      }
    },
    "column": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Column identifier - MUST use 'id' for table columns (not 'key'). Will be normalized from 'key' to 'id' if needed."
        },
        "key": {
          "type": "string",
          "description": "Legacy: use 'id' instead. Will be migrated to 'id' during normalization."
        },
        "title": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "description": "Column display type",
          "enum": [
            "text",
            "number",
            "money",
            "date",
            "date-ago",
            "status",
            "boolean",
            "image",
            "email",
            "link",
            "badge",
            "actions",
            "custom"
          ]
        },
        "sortable": {
          "type": "boolean",
          "default": true
        },
        "width": {
          "oneOf": [{ "type": "string" }, { "type": "number" }],
          "description": "Column width (number for px, or string like '10%' or '100px')"
        }
      }
    },
    "customSlot": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Slot name (e.g., 'item_status')"
        },
        "component": {
          "type": "string",
          "description": "Component name to use in slot (e.g., 'StatusBadge')"
        },
        "props": {
          "type": "object",
          "description": "Props to pass to component"
        }
      }
    },
    "widget": {
      "type": "object",
      "required": ["id", "component"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Widget identifier"
        },
        "component": {
          "type": "string",
          "description": "Widget component name (e.g., 'SpecialPricesWidget')"
        },
        "condition": {
          "type": "string",
          "description": "Condition for widget visibility (e.g., 'item.id')"
        },
        "props": {
          "type": "object",
          "description": "Props to pass to widget"
        }
      }
    },
    "filter": {
      "type": "object",
      "required": ["key", "type"],
      "properties": {
        "key": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["select", "date", "dateRange", "text", "number"]
        },
        "label": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "dataSource": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["localModel", "localArray", "api"]
        },
        "endpoint": {
          "type": "string"
        }
      }
    }
  }
}
