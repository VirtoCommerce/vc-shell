{
  "extends": "@vc-shell/ts-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["vite/client", "./typings/declarations.d.ts"]
  },
  "include": [
    "*.ts",
    "typings",

    "core/**/*.ts",
    "core/api/*.ts",

    "ui/components",
    "ui/types/*.ts",
    "ui/locales/*.ts",
    "ui/locales/*.json",
    "ui/core/controls/models.ts",

    "shared/**/*.vue",
    "shared/**/*.ts",
    "shared/**/*.json",

    "utils/*.ts",

    "locales/*.ts",
    "locales/*.json"
  ],
}
