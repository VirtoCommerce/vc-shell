{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vc-shell.dev/schemas/ui-plan.v1.json",
  "title": "VC Shell UI Plan",
  "description": "Schema for declarative UI generation in VC Shell framework",
  "type": "object",
  "required": ["$schema", "module", "blades"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://vc-shell.dev/schemas/ui-plan.v1.json"
    },
    "module": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "description": "Module name in kebab-case"
    },
    "blades": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/blade"
      }
    },
    "data": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/dataSource"
          }
        }
      }
    }
  },
  "definitions": {
    "blade": {
      "type": "object",
      "required": ["id", "route", "layout", "title"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
        },
        "route": {
          "type": "string",
          "pattern": "^/[a-z0-9/-]*$"
        },
        "layout": {
          "type": "string",
          "enum": ["page", "grid", "details"]
        },
        "title": {
          "type": "string"
        },
        "isWorkspace": {
          "type": "boolean",
          "default": false
        },
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/component"
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["save", "delete", "refresh", "add", "edit", "remove", "next", "back", "submit"]
          }
        },
        "features": {
          "type": "array",
          "description": "Additional features for the blade",
          "items": {
            "type": "string",
            "enum": ["filters", "multiselect", "validation", "gallery", "widgets"]
          }
        },
        "customSlots": {
          "type": "array",
          "description": "Custom slot components for table columns",
          "items": {
            "$ref": "#/definitions/customSlot"
          }
        },
        "theme": {
          "type": "object",
          "properties": {
            "variant": {
              "type": "string",
              "enum": ["light", "dark", "system"],
              "default": "system"
            }
          }
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "logic": {
          "type": "object",
          "description": "Blade logic definition for AI generation",
          "properties": {
            "handlers": {
              "type": "object",
              "description": "Event handler descriptions",
              "additionalProperties": {
                "type": "string"
              }
            },
            "toolbar": {
              "type": "array",
              "description": "Toolbar action definitions",
              "items": {
                "type": "object",
                "required": ["id", "action"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "icon": {
                    "type": "string"
                  },
                  "action": {
                    "type": "string",
                    "description": "Action description (e.g., 'reload()', 'openBlade(EntityDetails)')"
                  }
                }
              }
            },
            "state": {
              "type": "object",
              "description": "State management definitions",
              "additionalProperties": {
                "type": "object",
                "required": ["source", "reactive"],
                "properties": {
                  "source": {
                    "type": "string",
                    "enum": ["composable", "local", "prop"]
                  },
                  "reactive": {
                    "type": "boolean"
                  },
                  "default": {
                    "description": "Default value for the state"
                  }
                }
              }
            }
          }
        },
        "composable": {
          "type": "object",
          "description": "Composable definition for AI generation",
          "properties": {
            "name": {
              "type": "string",
              "description": "Composable name (e.g., 'useEntityList')"
            },
            "methods": {
              "type": "array",
              "description": "Methods provided by composable",
              "items": {
                "type": "string"
              }
            },
            "mockData": {
              "type": "boolean",
              "description": "Whether to include mock data",
              "default": true
            }
          }
        }
      }
    },
    "step": {
      "type": "object",
      "required": ["id", "title", "components"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/component"
          }
        }
      }
    },
    "component": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["VcTable", "VcForm", "VcInput", "VcTextarea", "VcSelect", "VcCheckbox", "VcSwitch", "VcButton", "VcCard"]
        },
        "dataSource": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "fields": {
          "type": "array",
          "maxItems": 50,
          "items": {
            "$ref": "#/definitions/field"
          }
        },
        "columns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/column"
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "filters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/filter"
          }
        },
        "props": {
          "type": "object"
        }
      }
    },
    "field": {
      "type": "object",
      "required": ["key", "as", "label"],
      "properties": {
        "key": {
          "type": "string"
        },
        "as": {
          "type": "string",
          "enum": ["VcInput", "VcTextarea", "VcSelect", "VcCheckbox", "VcSwitch", "VcGallery", "VcFileUpload"]
        },
        "label": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "description": "Field data type",
          "enum": ["text", "email", "number", "date", "boolean", "url", "tel"]
        },
        "placeholder": {
          "type": "string"
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "column": {
      "type": "object",
      "required": ["key", "title"],
      "properties": {
        "key": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "description": "Column display type",
          "enum": ["text", "number", "money", "date", "date-ago", "status", "boolean", "image", "email"]
        },
        "sortable": {
          "type": "boolean",
          "default": true
        },
        "width": {
          "type": "string"
        }
      }
    },
    "customSlot": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Slot name (e.g., 'item_status')"
        },
        "component": {
          "type": "string",
          "description": "Component name to use in slot (e.g., 'StatusBadge')"
        },
        "props": {
          "type": "object",
          "description": "Props to pass to component"
        }
      }
    },
    "filter": {
      "type": "object",
      "required": ["key", "type"],
      "properties": {
        "key": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["select", "date", "dateRange", "text", "number"]
        },
        "label": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "dataSource": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["localModel", "localArray", "api"]
        },
        "endpoint": {
          "type": "string"
        }
      }
    }
  }
}

