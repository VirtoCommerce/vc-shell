{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "preserve",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "paths": {
      "@vc-shell/framework": [
        "framework"
      ],
      "@vc-shell/config-generator": [
        "cli/config/src"
      ],
      "@vc-shell/api-client-generator": [
        "cli/api-client/src"
      ],
      "@vc-shell/import-module": [
        "import-module/src"
      ]
    }
  },
  "references": [
    {
      "path": "framework/"
    },
    {
      "path": "cli/config/"
    },
    {
      "path": "cli/api-client/"
    },
    {
      "path": "import-module/"
    }
  ]
}
