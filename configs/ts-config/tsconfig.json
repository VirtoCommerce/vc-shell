{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "jsx": "preserve",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "composite": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
  },
  // Base excludes
  "exclude": [
    "node_modules",
    "dist"
  ]
}
