{
  "npmClient": "yarn",
  "packages": [
    "apps/*",
    "framework",
    "cli/*"
  ],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "create": {
      "homepage": "https://github.com/VirtoCommerce/vc-shell"
    },
