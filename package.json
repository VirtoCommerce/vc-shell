{
  "name": "@virtoshell/root",
  "version": "0.0.29",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "prepare": "npm run bootstrap",
    "postinstall": "husky install",
    "publish": "lerna publish",
    "lint": "eslint --fix packages/**/*.{js,ts,vue}",
    "lint-staged": "lint-staged",
    "init-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version": "cross-env-shell \"lerna version $npm_package_version --conventional-commits --no-commit-hooks --no-push --ignore-scripts --force-publish --no-git-tag-version --yes && git add .\"",
    "postversion": "git push origin --tags",
    "build": "lerna run build",
    "build-framework": "lerna run build --scope @virtoshell/{ui,ui-theme-dark,ui-theme-light,core,api-client}",
    "build-framework:ui": "lerna run build --scope @virtoshell/ui",
    "build-framework:ui-theme-dark": "lerna run build --scope @virtoshell/ui-theme-dark",
    "build-framework:ui-theme-light": "lerna run build --scope @virtoshell/ui-theme-light",
    "build-framework:core": "lerna run build --scope @virtoshell/core",
    "build-framework:api-client": "lerna run build --scope @virtoshell/api-client",
    "build-apps:demo-manager": "lerna run build --scope @virtoshell/app-demo-manager",
    "serve-apps:demo-manager": "lerna run serve --stream --scope @virtoshell/app-demo-manager",
    "storybook-build": "lerna run storybook:build --stream --scope @virtoshell/ui",
    "storybook-serve": "lerna run storybook:serve --stream --scope @virtoshell/ui"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@commitlint/config-lerna-scopes": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "chalk": "^2.4.2",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.14.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  }
}
