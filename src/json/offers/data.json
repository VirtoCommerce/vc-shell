{
  "settings": {
    "url": "/offer-j",
    "titleTemplate": "Offer details",
    "moduleName": "Offer details",
    "icon": "fas fa-file-alt",
    "composable": "useOffer",
    "toolbar": []
  },
  "content": [
    {
      "type": "form",
      "children": [
        {
          "type": "select",
          "label": "Product",
          "name": "product",
          "property": "productId",
          "optionValue": "id",
          "optionLabel": "name",
          "moreInfo": "ProductJ",
          "rules": {
            "required": true
          }
        },
        {
          "type": "card",
          "label": "Inventory",
          "children": [
            {
              "type": "input",
              "label": "SKU",
              "name": "sku",
              "property": "sku",
              "rules": {
                "required": true
              }
            },
            {
              "type": "checkbox",
              "property": "trackInventory",
              "content": "Always in stock",
              "trueValue": false,
              "falseValue": true,
              "label": "Quantity in stock",
              "name": "trackInventory"
            },
            {
              "type": "fieldset",
              "property": "inventory",
              "fields": [
                {
                  "type": "input",
                  "property": "inStockQuantity",
                  "name": "InStockQuantity",
                  "label": "{fulfillmentCenterName}",
                  "variant": "number",
                  "rules": {
                    "required": true,
                    "bigint": true
                  },
                  "disabled": { "method": "trackInventory" }
                }
              ]
            }
          ]
        },
        {
          "type": "card",
          "label": "Properties",
          "children": [
            {
              "type": "dynamic-properties",
              "label": "Properties",
              "property": "properties",
              "include": ["Variation"]
            }
          ]
        },
        {
          "type": "card",
          "label": "Pricing",
          "actions": [
            {
              "type": "button",
              "content": "Add price",
              "small": true,
              "method": "addPrice",
              "name": "addPrice"
            }
          ],
          "children": [
            {
              "type": "fieldset",
              "property": "prices",
              "columns": 3,
              "remove": {
                "method": "removePrice"
              },
              "fields": [
                {
                  "type": "input-currency",
                  "label": "List price",
                  "property": "listPrice",
                  "optionProperty": "currency",
                  "optionValue": "value",
                  "optionLabel": "title",
                  "rules": {
                    "required": true
                  },
                  "name": "listPrice"
                },
                {
                  "type": "input-currency",
                  "label": "Sales price",
                  "property": "salePrice",
                  "optionProperty": "currency",
                  "optionValue": "value",
                  "optionLabel": "title",
                  "name": "salePrice"
                },
                {
                  "type": "input",
                  "label": "Minimum quantity",
                  "property": "minQuantity",
                  "rules": {
                    "required": true
                  },
                  "name": "minQuantity"
                }
              ]
            }
          ]
        },
        {
          "type": "card",
          "label": "Validity dates",
          "children": [
            {
              "type": "fieldset",
              "label": "Validity dates",
              "columns": 2,
              "fields": [
                {
                  "type": "input",
                  "label": "Validity from",
                  "name": "startDate",
                  "variant": "datetime-local",
                  "property": "startDate",
                  "rules": {}
                },
                {
                  "type": "input",
                  "label": "Validity to",
                  "name": "endDate",
                  "variant": "datetime-local",
                  "property": "endDate",
                  "rules": { "after": "@startDate" }
                }
              ]
            }
          ]
        },
        {
          "type": "card",
          "label": "Gallery",
          "children": [
            {
              "type": "gallery",
              "property": "images"
            }
          ]
        }
      ]
    }
  ]
}
