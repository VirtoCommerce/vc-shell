{
  "name": "@vc-shell/root",
  "version": "1.0.63",
  "private": true,
  "repository": "https://github.com/VirtoCommerce/vc-shell",
  "scripts": {
    "vendor-portal-app-init": "mkdir apps && cd apps && git clone https://github.com/VirtoCommerce/vendor-portal.git && cd ../ && yarn && yarn bootstrap && yarn run build",
    "bootstrap": "lerna bootstrap -- --frozen-lockfile",
    "prepare": "yarn run bootstrap",
    "postinstall": "husky install",
    "publish": "lerna publish",
    "lint": "eslint --fix 'framework/**/*.{ts,vue}' 'apps/**/*.{ts,vue}'",
    "lint-staged": "lint-staged",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "packages-changelog": "lerna exec --scope=@vc-shell/{config-generator,api-client-generator,framework} --concurrency 1 --stream -- 'conventional-changelog --preset angular --release-count 0 --commit-path $PWD --pkg $PWD/package.json --outfile $PWD/CHANGELOG.md --lerna-package $LERNA_PACKAGE_NAME'",
    "bump-version": "cross-env-shell 'f() { lerna version \"$@\" --conventional-commits --no-changelog --no-commit-hooks --no-push --ignore-scripts --force-publish --no-git-tag-version --yes && lerna run create:tag && lerna run changelog && yarn packages-changelog && yarn version --\"$@\" && yarn changelog && git add . && git commit --amend --no-edit;}; f'",
    "postversion": "git push origin --tags",
    "build": "lerna run build --scope=@vc-shell/{config-generator,api-client-generator,framework}",
    "build-framework": "lerna run build --scope @vc-shell/framework",
    "build-cli:config": "lerna run build --scope @vc-shell/config-generator",
    "build-cli:api-client": "lerna run build --scope @vc-shell/api-client-generator",
    "generate-api-client:api-client": "lerna run generate-api-client --scope=@vc-shell/framework --stream --no-prefix",
    "generate-api-client": "lerna run generate-api-client --stream --no-prefix",
    "storybook-build": "cross-env APP_ENV=production storybook build -s .storybook/assets",
    "storybook-serve": "storybook dev .storybook/assets -p 6006"
  },
  "workspaces": [
    "apps/*",
    "framework",
    "cli/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/config-lerna-scopes": "^17.4.2",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-actions": "^7.0.2",
    "@storybook/addon-backgrounds": "^7.0.2",
    "@storybook/addon-essentials": "^7.0.2",
    "@storybook/addon-links": "^7.0.2",
    "@storybook/components": "^7.0.2",
    "@storybook/core-client": "^7.0.2",
    "@storybook/core-events": "^7.0.2",
    "@storybook/theming": "^7.0.2",
    "@storybook/vue3": "^7.0.2",
    "@storybook/vue3-vite": "^7.0.2",
    "@types/lodash-es": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "autoprefixer": "^10.4.4",
    "chalk": "^2.4.2",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "eslint": "~8.22.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-vue": "^8.4.0",
    "husky": "^7.0.1",
    "lerna": "^6.6.1",
    "lint-staged": "^11.0.1",
    "lodash-es": "^4.17.21",
    "path": "^0.12.7",
    "postcss": "^8.4.12",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.49.0",
    "storybook": "^7.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-plugin-checker": "^0.4.2",
    "vite-plugin-pwa": "^0.14.4",
    "vue": "^3.0.0",
    "vue-eslint-parser": "^8.2.0",
    "vue-tsc": "~1.0.24",
    "yarn": "^1.22.11"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  }
}
