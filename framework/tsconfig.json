{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "preserve",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "outDir": "dist",
    "strict": false,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@api": ["./core/api"],
      "@components": ["./components"],
      "@composables":  ["./core/composables"],
      "@directives": ["./core/directives"],
      "@plugins": ["./core/plugins"],
      "@types": ["./core/types"],
      "@utilities":  ["./core/utilities"],
      "@shared":  ["./shared"]
    }
  },
  "include": [
    "*.ts",
    "core/**/*.ts",
    "components/**/*.vue",
    "components/**/*.ts",
    "shared/**/*.vue",
    "shared/**/*.ts",
    "core/api"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
