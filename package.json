{
  "name": "@virtoshell/root",
  "version": "1.0.13",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --force-local && lerna link --force-local",
    "prepare": "yarn run bootstrap",
    "postinstall": "husky install",
    "publish": "lerna publish",
    "lint": "eslint --fix packages/**/*.{js,ts,vue}",
    "lint-staged": "lint-staged",
    "init-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version": "cross-env-shell \"lerna version $npm_package_version --conventional-commits --no-commit-hooks --no-push --ignore-scripts --force-publish --no-git-tag-version --yes && git add .\"",
    "postversion": "git push origin --tags",
    "build": "lerna run build",
    "build-modules": "lerna run build --scope @virtoshell/mod-*",
    "build-framework": "lerna run build --scope @virtoshell/{ui,core,api-client}",
    "build-framework:ui": "lerna run build --scope @virtoshell/ui",
    "build-framework:core": "lerna run build --scope @virtoshell/core",
    "build-framework:api-client": "lerna run build --scope @virtoshell/api-client",
    "build-cli:config": "lerna run build --scope @virtoshell/config-generator",
    "build-cli:api-client": "lerna run build --scope @virtoshell/api-client-generator",
    "generate-api-client:api-client": "lerna run generate-api-client --scope=@virtoshell/api-client --stream --no-prefix",
    "generate-api-client:vendor-portal": "lerna run generate-api-client --scope=@virtoshell/app-vendor-portal --stream --no-prefix",
    "generate-api-client": "lerna run generate-api-client --stream --no-prefix",
    "build-apps:vendor-portal": "lerna run build --scope @virtoshell/app-vendor-portal",
    "serve-apps:vendor-portal": "cd apps/vendor-portal && yarn serve",
    "build-apps:marketing-portal": "lerna run build --scope @virtoshell/app-marketing-portal",
    "serve-apps:marketing-portal": "cd apps/marketing-portal && yarn serve",
    "storybook-build": "cross-env APP_ENV=production build-storybook -s .storybook/assets",
    "storybook-serve": "start-storybook -s .storybook/assets -p 6006"
  },
  "workspaces": [
    "apps/*",
    "framework/*",
    "modules/*",
    "cli/*"
  ],
  "dependencies": {
    "@tailwindcss/line-clamp": "^0.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@commitlint/config-lerna-scopes": "^12.1.4",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-backgrounds": "^6.4.18",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/builder-vite": "^0.1.28",
    "@storybook/components": "^6.3.8",
    "@storybook/core-client": "^6.3.8",
    "@storybook/core-events": "^6.3.8",
    "@storybook/theming": "^6.3.8",
    "@storybook/vue3": "^6.3.8",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "file:stub/types__react",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "autoprefixer": "^10.4.4",
    "chalk": "^2.4.2",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lerna-changelog": "^1.0.1",
    "less": "^3.0.4",
    "lint-staged": "^11.0.1",
    "lodash-es": "^4.17.21",
    "path": "^0.12.7",
    "postcss": "^8.4.12",
    "prettier": "^2.5.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "sass": "^1.49.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.5",
    "vite": "^2.8.3",
    "vite-plugin-checker": "^0.4.2",
    "vite-plugin-pwa": "^0.11.13",
    "vue": "^3.0.0",
    "vue-eslint-parser": "^8.2.0",
    "vue-tsc": "^0.32.0",
    "yarn": "^1.22.11"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  }
}
