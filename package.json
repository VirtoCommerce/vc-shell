{
  "name": "@vc-shell/root",
  "version": "1.1.5",
  "private": true,
  "repository": "https://github.com/VirtoCommerce/vc-shell",
  "scripts": {
    "postinstall": "husky install",
    "publish": "yarn workspaces foreach -v --worktree --from '{@vc-shell/config-generator,@vc-shell/api-client-generator,@vc-shell/framework,@vc-shell/create-vc-app,@vc-shell/release-config,@vc-shell/ts-config}' npm publish",
    "publish:tag": "yarn workspaces foreach -v --worktree --from '{@vc-shell/config-generator,@vc-shell/api-client-generator,@vc-shell/framework,@vc-shell/create-vc-app,@vc-shell/release-config,@vc-shell/ts-config}' npm publish --tag=$npm_config_tag",
    "lint": "eslint --fix --cache 'framework/**/*.{ts,vue}' 'cli/**/*.{ts,vue}' 'configs/**/*.{ts,vue}'",
    "lint-staged": "lint-staged",
    "build": "yarn workspaces foreach -v --worktree --from '{@vc-shell/config-generator,@vc-shell/api-client-generator,@vc-shell/create-vc-app,@vc-shell/framework,@vc-shell/release-config}' run build",
    "build-framework": "yarn workspace @vc-shell/framework run build",
    "build-cli:config": "yarn workspace @vc-shell/config-generator run build",
    "build-cli:api-client": "yarn workspace @vc-shell/api-client-generator run build",
    "build-cli:create-vc-app": "yarn workspace @vc-shell/create-vc-app run build",
    "build-config:release-config": "yarn workspace @vc-shell/release-config run build",
    "generate:api-client": "yarn workspace @vc-shell/framework exec cross-env api-client-generator --APP_PLATFORM_MODULES='[VirtoCommerce.Platform]' --APP_API_CLIENT_DIRECTORY=./core/api/ --SKIP_BUILD=true",
    "storybook-build": "cross-env APP_ENV=production storybook build",
    "storybook-serve": "storybook dev -p 6006 --no-open",
    "release": "tsx scripts/release.ts",
    "storybook-compress": "vite-node --mode production scripts/compress-storybook.ts --",
    "check-locales": "tsx framework/scripts/check-locales.mts",
    "generate-icons": "tsx framework/scripts/generate-icons.mts",
    "prepare": "husky install",
    "pre-commit": "yarn generate-icons && yarn check-locales"
  },
  "workspaces": [
    "apps/*",
    "framework",
    "cli/*",
    "configs/*",
    "sample/*"
  ],
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@storybook/addon-actions": "^8.6.12",
    "@storybook/addon-backgrounds": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/components": "^8.6.12",
    "@storybook/core-common": "^8.6.12",
    "@storybook/core-events": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@storybook/vue3": "^8.6.12",
    "@storybook/vue3-vite": "^8.6.12",
    "@types/adm-zip": "^0.5.5",
    "@types/jquery": "^3.5.32",
    "@types/lodash": "^4.17.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.5",
    "@types/prismjs": "^1.26.3",
    "@types/serialize-javascript": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "13.0.0",
    "adm-zip": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "chalk": "^5.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "eslint-define-config": "^2.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-vue": "^9.19.2",
    "globby": "^13.2.2",
    "husky": "^8.0.0",
    "jquery": "^3.7.1",
    "lint-staged": "^15.2.2",
    "lodash-es": "^4.17.21",
    "path": "^0.12.7",
    "playwright": "^1.52.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.87.0",
    "serialize-javascript": "^6.0.2",
    "shx": "^0.3.4",
    "storybook": "^8.6.12",
    "storybook-vue3-router": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-node": "^1.3.1",
    "vite-plugin-checker": "^0.9.1",
    "vite-plugin-mkcert": "^1.17.1",
    "vite-plugin-pwa": "^0.18.1",
    "vitest": "^3.1.2",
    "vue": "^3.5.13",
    "vue-component-meta": "^2.2.8",
    "vue-eslint-parser": "^9.3.2",
    "vue-tsc": "^2.2.10"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "semver": "^7.7.1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix --cache --max-warnings=0",
      "prettier --write"
    ],
    "*.{html,css,json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.5.1",
  "npmTag": "next"
}
