{
  "extends": "@vc-shell/ts-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["vite/client", "./typings/declarations.d.ts"],
    "paths": {
      "@framework": ["./"],
      "@framework/*": ["./*"],
      "@core": ["./core"],
      "@core/*": ["./core/*"],
      "@ui": ["./ui"],
      "@ui/*": ["./ui/*"],
      "@shared": ["./shared"],
      "@shared/*": ["./shared/*"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@locales": ["./locales"],
      "@locales/*": ["./locales/*"],
      "@vc-shell/framework": ["./index.ts"],
      "@vc-shell/framework/*": ["./*"]
    }
  },
  "include": [
    "*.ts",
    "typings",
    "core/**/*.ts",
    "core/api/*.ts",
    "core/plugins/**/*.vue",
    "ui/components",
    "ui/composables",
    "ui/types/*.ts",
    "ui/locales/*.ts",
    "ui/locales/*.json",
    "shared/**/*.vue",
    "shared/**/*.ts",
    "shared/**/*.json",
    "utils/*.ts",
    "locales/*.ts",
    "locales/*.json"
  ],
  "exclude": [
    "**/*.spec.ts",
    "vitest.config.ts",
    // TODO: fix this
    "**/*.stories.ts"
  ]
}
